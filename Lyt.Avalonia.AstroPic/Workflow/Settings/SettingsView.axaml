<UserControl
	x:Class="Lyt.Avalonia.AstroPic.Workflow.Settings.SettingsView"
	xmlns="https://github.com/avaloniaui"
	xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
	xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
	xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
	mc:Ignorable="d" d:DesignWidth="800" d:DesignHeight="450"
	xmlns:controls="clr-namespace:Lyt.Avalonia.AstroPic.Controls"
	xmlns:panzoom="using:Lyt.Avalonia.Controls.PanZoom"
	xmlns:interactions="using:Lyt.Avalonia.Mvvm.Behaviors"
	xmlns:shared="clr-namespace:Lyt.Avalonia.AstroPic.Workflow.Shared"
	xmlns:vm="clr-namespace:Lyt.Avalonia.AstroPic.Workflow.Settings"
	x:DataType="vm:SettingsViewModel"
	>
	<ScrollViewer
		Margin="2"
		Background="Transparent"
		VerticalAlignment="Stretch" HorizontalAlignment="Stretch"
		ScrollViewer.HorizontalScrollBarVisibility="Disabled"
		ScrollViewer.VerticalScrollBarVisibility="Auto"
		>
		<WrapPanel
			Background="Transparent"
			>
			<vm:ContainerControl
				Foreground="Aquamarine"
				Margin="16"
				Text="Servizi di download di immagini"
				>
				<vm:ContainerControl.ContainerControlContent>
					<Rectangle
						Width="200" Height="400"
						Fill="AntiqueWhite"
					/>
				</vm:ContainerControl.ContainerControlContent>
			</vm:ContainerControl>
			<vm:ContainerControl
				Foreground="Firebrick"
				Margin="16"
				Text="Impostazioni della quota disco"
				>
				<vm:ContainerControl.ContainerControlContent>
					<Rectangle
						Width="800" Height="600"
						Fill="LightCoral"
						/>
				</vm:ContainerControl.ContainerControlContent>
			</vm:ContainerControl>
			<vm:ContainerControl
				Foreground="Firebrick"
				Margin="16"
				Text="Controlli del sistema operativo"
				>
				<vm:ContainerControl.ContainerControlContent>
					<Rectangle
						Width="800" Height="600"
						Fill="LightCoral"
						/>
				</vm:ContainerControl.ContainerControlContent>
			</vm:ContainerControl>
			<vm:ContainerControl
				Foreground="Firebrick"
				Margin="16"
				Text="Promemoria importante..."
				>
				<vm:ContainerControl.ContainerControlContent>
					<Rectangle
						Width="400" Height="400"
						Fill="LightCoral"
						/>
				</vm:ContainerControl.ContainerControlContent>
			</vm:ContainerControl>
		</WrapPanel>
	</ScrollViewer>
</UserControl>
