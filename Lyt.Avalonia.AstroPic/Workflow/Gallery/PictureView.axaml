<UserControl 
	x:Class="Lyt.Avalonia.AstroPic.Workflow.Gallery.PictureView"
	xmlns="https://github.com/avaloniaui"
	xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
	xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
	xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
	mc:Ignorable="d" d:DesignWidth="800" d:DesignHeight="450"
	xmlns:controls="clr-namespace:Lyt.Avalonia.AstroPic.Controls"
	xmlns:panzoom="using:Lyt.Avalonia.Controls.PanZoom"
	xmlns:interactions="using:Lyt.Avalonia.Mvvm.Behaviors"
	xmlns:vm="clr-namespace:Lyt.Avalonia.AstroPic.Workflow.Gallery"
	x:DataType="vm:PictureViewModel" 
	>
	<Grid
		Background="Transparent"
		>
		<Grid.RowDefinitions>
			<RowDefinition Height="50" />
			<RowDefinition Height="*" />
			<RowDefinition Height="{Binding DescriptionHeight}" />
		</Grid.RowDefinitions>
		<TextBlock
			Grid.Row="0" 
			Text="{Binding Provider}"
			HorizontalAlignment="Left" VerticalAlignment="Center"
			Margin="20 0 0 0"
			FontSize="24"
			FontWeight="DemiBold"
			Foreground="{StaticResource PastelOrchid_0_080}"
			TextWrapping="Wrap"
			/>
		<TextBlock
			Grid.Row="0"
			Text="{Binding Title}"
			HorizontalAlignment="Left" VerticalAlignment="Center"
			Margin="200 0 0 0"
			FontSize="24"
			FontWeight="DemiBold"
			Foreground="{StaticResource PastelOrchid_0_080}"
			TextWrapping="Wrap"
			/>
		<TextBlock
			Grid.Row="0"
			Text="{Binding Copyright}"
			HorizontalAlignment="Right" VerticalAlignment="Center"
			Margin="0 0 20 0"
			FontSize="14"
			FontWeight="Normal"
			Foreground="{StaticResource PastelOrchid_0_080}"
			TextWrapping="Wrap"
			/>
		<panzoom:PanZoomControl
			x:Name="PanAndZoom"
			Grid.Column="1" Grid.Row="1"
			Background="Transparent"
			ZoomFactor="{Binding ZoomFactor}"
			ShiftToDrag="False"
			>
			<panzoom:PanZoomControl.ZoomableContent>
				<Canvas
					x:Name="Canvas"
					RenderOptions.BitmapInterpolationMode="LowQuality"
					Background="Transparent"
					VerticalAlignment="Top" HorizontalAlignment="Left"
					>
				</Canvas>
			</panzoom:PanZoomControl.ZoomableContent>
		</panzoom:PanZoomControl>
		<controls:ZoomController
			x:Name="ZoomController"
			Grid.Column="1" Grid.Row="1"
			VerticalAlignment="Top" HorizontalAlignment="Right"
			Margin="0 20 20 20"
			/>
		<TextBlock
			Grid.Row="2"
			Text="{Binding Description}"
			HorizontalAlignment="Center" VerticalAlignment="Center"
			Margin="0 0 0 0"
			FontSize="18"
			FontWeight="Normal"
			Foreground="{StaticResource PastelOrchid_0_080}"
			TextWrapping="Wrap"
			/>
	</Grid>
</UserControl>
