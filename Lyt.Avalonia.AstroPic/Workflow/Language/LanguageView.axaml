<UserControl 
	x:Class="Lyt.Avalonia.AstroPic.Workflow.Language.LanguageView"
	xmlns="https://github.com/avaloniaui"
	xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
	xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
	xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
	mc:Ignorable="d" d:DesignWidth="800" d:DesignHeight="450"
	xmlns:controls="clr-namespace:Lyt.Avalonia.AstroPic.Controls"
	xmlns:panzoom="using:Lyt.Avalonia.Controls.PanZoom"
	xmlns:interactions="using:Lyt.Avalonia.Mvvm.Behaviors"
	xmlns:shared="clr-namespace:Lyt.Avalonia.AstroPic.Workflow.Shared"
	xmlns:vm="clr-namespace:Lyt.Avalonia.AstroPic.Workflow.Language"
	x:DataType="vm:LanguageViewModel" 
	Background="Transparent"
	>
	<Grid
		Margin="10 0 0 0"
		VerticalAlignment="Stretch" HorizontalAlignment="Stretch"
		ShowGridLines="False"
		>
		<Grid.ColumnDefinitions>
			<ColumnDefinition Width="640" />
			<ColumnDefinition Width="*" />
		</Grid.ColumnDefinitions>
		<Grid.RowDefinitions>
			<RowDefinition Height="120" />
			<RowDefinition Height="60" />
			<RowDefinition Height="60" />
			<RowDefinition Height="60" />
			<RowDefinition Height="60" />
			<RowDefinition Height="60" />
			<RowDefinition Height="60" />
			<RowDefinition Height="*" />
		</Grid.RowDefinitions>
		<TextBlock
			Grid.Column="0" Grid.Row="1" 
			Margin="20 0 0 0"
			Text="Scegli la lingua dell'interfaccia utente."
			FontSize="24"
			TextAlignment="Left"
			Foreground="{StaticResource PastelOrchid_0_080}"
			VerticalAlignment="Stretch" HorizontalAlignment="Stretch"
			TextWrapping="Wrap"
			/>
		<TextBlock
			Grid.Column="0" Grid.Row="2" 
			Margin="20 0 0 0"
			Text="Choisissez le langage de l'interface utilisateur."
			FontSize="24"
			TextAlignment="Left"
			Foreground="{StaticResource PastelOrchid_0_080}"
			VerticalAlignment="Stretch" HorizontalAlignment="Stretch"
			TextWrapping="Wrap"
			/>
		<TextBlock
			Grid.Column="0" Grid.Row="3" 
			Margin="20 0 0 0"
			Text="Choose the user interface language."
			FontSize="24"
			TextAlignment="Left"
			Foreground="{StaticResource PastelOrchid_0_080}"
			VerticalAlignment="Stretch" HorizontalAlignment="Stretch"
			TextWrapping="Wrap"
			/>
		<TextBlock
			Grid.Column="0" Grid.Row="4" 
			Margin="20 0 0 0"
			Text="Elija el idioma de la interfaz de usuario."
			FontSize="24"
			TextAlignment="Left"
			Foreground="{StaticResource PastelOrchid_0_080}"
			VerticalAlignment="Stretch" HorizontalAlignment="Stretch"
			TextWrapping="Wrap"
			/>
		<TextBlock
			Grid.Column="0" Grid.Row="5"
			Margin="20 0 0 0"
			Text="Виберіть мову інтерфейсу користувача."
			FontSize="24"
			TextAlignment="Left"
			Foreground="{StaticResource PastelOrchid_0_080}"
			VerticalAlignment="Stretch" HorizontalAlignment="Stretch"
			TextWrapping="Wrap"
			/>
		<TextBlock
			Grid.Column="0" Grid.Row="6"
			Margin="20 0 0 0"
			Text="Изберете езика на потребителския интерфейс."
			FontSize="24"
			TextAlignment="Left"
			Foreground="{StaticResource PastelOrchid_0_080}"
			VerticalAlignment="Stretch" HorizontalAlignment="Stretch"
			TextWrapping="Wrap"
			/>
		<ComboBox
			Grid.Column="1" Grid.Row="1" Grid.RowSpan="4"
			VerticalAlignment="Center" HorizontalAlignment="Left"
			x:Name="LanguageComboBox"
			ItemsSource="{Binding Languages}"
			SelectedIndex="{Binding SelectedLanguageIndex}"
			Width="380" Height="74" MaxDropDownHeight="400"
			>
			<ComboBox.ItemsPanel>
				<ItemsPanelTemplate>
					<StackPanel Orientation="Vertical"/>
				</ItemsPanelTemplate>
			</ComboBox.ItemsPanel>
			<ComboBox.ItemTemplate>
				<DataTemplate>
					<vm:LanguageInfoView />
				</DataTemplate>
			</ComboBox.ItemTemplate>
		</ComboBox>		
	</Grid>
</UserControl>
