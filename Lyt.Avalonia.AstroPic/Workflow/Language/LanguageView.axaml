<UserControl 
	x:Class="Lyt.Avalonia.AstroPic.Workflow.Language.LanguageView"
	xmlns="https://github.com/avaloniaui"
	xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
	xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
	xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
	mc:Ignorable="d" d:DesignWidth="800" d:DesignHeight="450"
	xmlns:controls="clr-namespace:Lyt.Avalonia.AstroPic.Controls"
	xmlns:panzoom="using:Lyt.Avalonia.Controls.PanZoom"
	xmlns:interactions="using:Lyt.Avalonia.Mvvm.Behaviors"
	xmlns:shared="clr-namespace:Lyt.Avalonia.AstroPic.Workflow.Shared"
	xmlns:vm="clr-namespace:Lyt.Avalonia.AstroPic.Workflow.Language"
	x:DataType="vm:LanguageViewModel" 
	Background="Transparent"
	>
	<Grid
		Margin="2"
		VerticalAlignment="Stretch" HorizontalAlignment="Stretch"
		>
		<ComboBox
			x:Name="LanguageComboBox"
			ItemsSource="{Binding Languages}"
			Width="360" Height="80" MaxDropDownHeight="400"
			>
			<ComboBox.ItemsPanel>
				<ItemsPanelTemplate>
					<StackPanel Orientation="Vertical"/>
				</ItemsPanelTemplate>
			</ComboBox.ItemsPanel>
			<ComboBox.ItemTemplate>
				<DataTemplate>
					<vm:LanguageInfoView />
				</DataTemplate>
			</ComboBox.ItemTemplate>
		</ComboBox>		
	</Grid>
</UserControl>
